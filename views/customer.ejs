    <div class="modal fade" id="manualInsert" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Manual Insert</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="alert alert-success saveSuccMsg mx-3 mt-3" style="display: none;">Save Successful</div>
                <div class="alert alert-danger saveFailMsg mx-3 mt-3" style="display: none;">Save Failed!</div>
                <div class="modal-body" style="overflow-y: auto;max-height: 450px;">
                    <form id="manualInsertForm">

                        <ul class="form-style-1">
                            <li>
                                <label>Full Name</label>
                                <input type="text" name="firstname" id="firstname" class="field-divided" placeholder="First" />
                                <input type="text" name="lastname" id="lastname" class="field-divided" placeholder="Last" />
                            </li>
                            <li>
                                <label>Email</label>
                                <input type="email" name="email" id="email" class="field-long" />
                            </li>
                            <li>
                                <label>Address</label>
                                <input type="text" name="address" id="address" class="field-divided-6" placeholder="Address filed"/>
                                <input type="text" name="city" id="city"  class="field-divided-3" placeholder="City"/>
                            </li>

                            <li>
                                <input type="text" name="pin" id="pin" class="field-divided-3" placeholder="Pin" />
                                <input type="text" name="state" id="state" class="field-divided-3" placeholder="State" />
                                <input type="text" name="country" id="country" class="field-divided-3" placeholder="Country" />
                            </li>

                            <li>
                                <label>Mobile</label>
                                <input type="text" name="mobile" id="mobile" class="field-long" placeholder="Mobile"/>
                            </li>
                            <li>
                                <label>Gender</label>
                                <select name="gender" id="gender" class="field-select">
                                    <option value="male" selected>Male</option>
                                    <option value="female">Female</option>
                                </select>
                            </li>
                            <li>
                                <label>Date Of Birth</label>
                                <input type="date" name="dob" id="dob" class="field-long" />
                            </li>
                            <li>
                                <label>Tags</label>
                                <input type="text" name="tags" id="tags"  class="field-long" placeholder="Tags"/>
                            </li>
                            <li>
                                <label>Date Added</label>
                                <input type="date" name="dateadded" class="field-long" id="dateadded" />
                            </li>
                            <li>
                                <label>Source</label>
                                <input type="text" name="source" id="source" class="field-long" />
                            </li>
                            <li>
                                <label>Email Marketing Consent</label>
                                <select name="emc" id="emc" class="field-select">
                                    <option value="1" selected>True</option>
                                    <option value="0">False</option>
                                </select>
                            </li>
                            <li>
