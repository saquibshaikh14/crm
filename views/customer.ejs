<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js" type="text/javascript"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" type="text/javascript"></script>
<script src="/js/structured-filter.js" type="text/javascript" type="text/javascript"></script>
<script src="/js/table.js"></script>
<script src="/js/main.js"></script>
<script>
    $(document).ready(function () {
        tableSearchContent();
        $('#segment-box').structFilter({
            buttonLabels: true,
            submitReady: true,
            submitButton: true,
            fields: [
                {id: "dateadded", type: "date", label: "Date Added"},
                {id: "email", type: "text", label: "Email"},
                {id: "firstname", type: "text", label: "First Name"},
                {id: "lastname", type: "text", label: "Last Name"},
                {id: "dob", type: "date", label: "Date Of Birth"},
                {id: "contact", type: "text", label: "Contact"},
                {id: "city", type: "text", label: "City"},
                {id: "state", type: "text", label: "State"},
                {id: "country", type: "text", label: "Country"},
                {id: "zip", type: "text", label: "Zip"},
                {id: "tags", type: "text", label: "Tags"},
                {id: "product", type: "text", label: "Product"},
                {id: "orderdate", type: "date", label: "Order Date"},
                {id: "emc", type: "boolean", label: "Email Subscribe"},
                {id: "smc", type: "boolean", label: "SMS Subscribe"},
                {id: "wmc", type: "boolean", label: "Whatsapp Subscribe"}
            ]
        });

        $('#segment-box').on('submit.search', function (event) {

            var filter = $("#segment-box").structFilter("val");

            if(filter.length>0){
                $('#dataLoadSpinner').append('<div style="width: 100vw;height: 100vh; position: fixed;top:0;left:0;z-index: 1060;background-color: rgba(0,0,0,0.5);" id="spinnerContainer"><div class="spinner-border text-light btn-loader" style="position: absolute;top:50%;left:50%;height:50px;width:50px;"></div></div>');

                $.ajax({
                    type: 'POST',
                    url: '/customer/contacts/filter',
                    data: {data: JSON.stringify(filter)},
                    success:function (data) {
                        if(data.status == '200'){
                            var tbl = getDatTable(data);
                            $('#dataTable').html(tbl);
                            $('#totalPages').text('1');
                            $('#pageStatus').val('1');
                            $('#tableSearch').val('');
                            $('#save-segment').show();
                        }else{
                            console.log('Error: 201');
                            alert('No data found');
                        }
                    },
                    error: function (err) {
                        alert('Error');
                    }
                });
                setTimeout(function () {
                    $('#spinnerContainer').remove();
                    tableSearchContent();
                },100)
            }else{
                alert('Please enter filter !!!');
            }
        });

        $("#segment-box").on("change.search", function (event) {
            $('#segment-box').css('display', 'block');
            $('.filter-clear').show();
        });
        $('.filter-clear').on('click', function () {
            $('#segment-box').structFilter("clear");
            $('.filter-clear').hide();
            $('#save-segment').hide();
            $('#segment-box').css('display', 'inline-block');
        });

    });

</script>

</body>


